.page-header
  = navigation(:class => "pills pull-right", :namespace => :scope) do |n|
    - n.default link_to "All", releases_path
    - n.favorited link_to "Favorited", releases_path(:scope => :favorited)
  %strong Releases


.wrapper
  = semantic_form_for(:search, :url => collection_path, :method => :get) do |f|
    = f.inputs do
      = f.input :name_like
      = f.submit "Search"

%table
  %thead
    %tr
      %th= #sort_link(@search, :name)
      %th= #sort_link(@search, :tracks_count)
      %th= #sort_link(@search, :created_at)
      %th
  %tbody
    - collection.each do |resource|
      %tr
        %td= link_to resource.name, resource, :class => "title"
        %td= resource.tracks_count
        %td= time_ago_in_words resource.created_at
        %td.actions
          = play_link([resource, :tracks])
          = enqueue_link([resource, :tracks])
          = favorite_link(resource)

= paginate(collection)