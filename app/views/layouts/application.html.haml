!!!
%html
  %head
    %title Jukebox2
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          = link_to "Jukebox2", root_path, :class => "brand"
          %ul.nav
            %li= link_to "Artists", artists_path
            %li= link_to "Releases", releases_path
            %li= link_to "Sources", sources_path

          = semantic_form_for(:search, :url => artists_path, :method => :get, :html => {:class => "pull-right"}) do |f|
            = f.inputs do
              %li= f.text_field :name_like

    .container
      .content= yield
      = render "layouts/player"
