.page-header
  .pull-right= link_to "Scan Sources", reindex_sources_path, :class => "button", :disable => "Working"

  %strong Sources

.wrapper
  = semantic_form_for(resource) do |f|
    = f.inputs :path
    = f.actions

%table
  %thead
    %tr
      %th Path
      %th Date
  %tbody
    - collection.each do |resource|
      %tr
        %td= resource.path
        %td= time_ago_in_words resource.created_at